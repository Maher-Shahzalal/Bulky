@model Category

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Category
            </h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-text form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="number" class="form-text form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="FrontImage" class="control-lable"></label>
            <div class="custom-file">
            <input asp-for="FrontImage" type="file" class="form-text form-control" id="FLFrontImage"/>
            <label class="custom-file lable" for="FLFrontImage">Choose file</label>
            </div>

            <img id="FrontImagePrv" src="" alt="Logo Image" width="150" height="150"
                style="border:1px ; margin-top:20px ; margin-left:120px ;" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
      
        
    </div>
</form>

            @section Scripts{
                @{
    <partial name="_ValidationScriptsPartial"/>
                }
            }